{
  "scripts": {
    "build:css": "npm run build:tailwind",
    "build:tailwind": "tailwindcss -i ./assets/tailwind/app.css -o ./assets/css/tailwind.css --minify",
    "build:tailwind:watch": "tailwindcss -i ./assets/tailwind/app.css -o ./assets/css/tailwind.css --watch",
    "lint:prettier": "prettier . --check",
    "lint:style-contract": "node test/style_contract.js",
    "test:visual": "playwright test --config test/visual/playwright.config.js",
    "test:visual:update": "playwright test --config test/visual/playwright.config.js --update-snapshots"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@playwright/test": "^1.56.1",
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "autoprefixer": "^10.4.21",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18"
  }
}
